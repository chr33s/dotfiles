#!/usr/bin/env sh

function _mac() {
  for dir in Code Documents Downloads Notes
  do
    mkdir ./${dir} || true &&
    chmod -R 754 ./${dir} &&
    rsync \
      --links \
      --inplace \
      --recursive \
      --no-whole-file \
      --info=progress2 \
      --delete-excluded \
          --exclude "**/.cache" \
          --exclude "**/.vagrant" \
      --exclude "**/node_modules" \
      ${HOME}/${dir} ./
  done
}

function _sublime() { # copy> | link
  CMD=${1:-copy}
  DEST="${HOME}/.config/sublime"

  case "$OSTYPE" in
    darwin*) SRC="${HOME}/Library/Application Support/Sublime Text 3/Packages/User" ;;
    linux*) SRC="${HOME}/.config/sublime-text-3/Packages/User" ;;
  esac

  case "$CMD" in
    copy)    cp -R "$SRC" "$DEST" ;;
    link)    mv "$SRC" "$SRC.bak" || true && ln -s "$DEST" "$SRC" ;;
  esac
}

function _vscode() {
  code --list-extensions > ${PWD}/vscode/extensions.txt
}

case $1 in
  mac)       _mac                      ;;
  sublime)   _sublime $2               ;;
  vscode)    _vscode                   ;;
  *)         echo "'$1' is not a valid sync command [mac, sublime, vscode]"  ;;
esac