#!/bin/bash

for dir in Code Documents Downloads Notes
do
    chmod -R 754 ./${dir} &&
    rsync \
		--links \
		--inplace \
		--recursive \
		--no-whole-file \
		--info=progress2 \
		--delete-excluded \
        --exclude "**/.cache" \
        --exclude "**/.vagrant" \
		--exclude "**/node_modules" \
		${HOME}/${dir} ./
done
