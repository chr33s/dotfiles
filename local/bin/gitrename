#!/bin/bash

# git rename name <email>

git filter-branch -f --commit-filter '
    if [ "$GIT_AUTHOR_EMAIL" != "$2" ]; then
        GIT_COMMITTER_NAME="$1";
        GIT_AUTHOR_NAME="$1";
        GIT_COMMITTER_EMAIL="$2";
        GIT_AUTHOR_EMAIL="$2";
        git commit-tree "$@";
    else
        git commit-tree "$@";
fi' HEAD
